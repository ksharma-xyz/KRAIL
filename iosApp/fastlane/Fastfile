# Fastfile for KRAIL iOS App

default_platform(:ios)

platform :ios do
  desc "Build iOS App for Release"
  lane :build_release do
    setup_ci if ENV['CI']

    # Configure App Store Connect API (recommended approach)
    if ENV["APPSTORE_KEY_ID"] && ENV["APPSTORE_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY_PATH"]
      app_store_connect_api_key(
        key_id: ENV["APPSTORE_KEY_ID"],
        issuer_id: ENV["APPSTORE_ISSUER_ID"],
        key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
        in_house: false
      )
    end

    # Increment build number automatically
    # Temporarily disabled - enable after first successful TestFlight upload
    # if ENV['CI']
    #   increment_build_number(
    #     build_number: latest_testflight_build_number + 1,
    #     xcodeproj: "iosApp.xcodeproj"
    #   )
    # end

    # Build the app
    build_app(
      scheme: "iosApp",
      project: "iosApp.xcodeproj",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "iosApp.ipa",
      clean: true,
      export_options: {
        provisioningProfiles: {
          ENV["APP_BUNDLE_ID"] => ENV["PROVISIONING_PROFILE_NAME"]
        }
      }
    )
  end

  desc "Upload to TestFlight"
  lane :upload_testflight do
    # Configure API key if not already set
    if ENV["APPSTORE_KEY_ID"] && ENV["APPSTORE_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY_PATH"]
      app_store_connect_api_key(
        key_id: ENV["APPSTORE_KEY_ID"],
        issuer_id: ENV["APPSTORE_ISSUER_ID"],
        key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
        in_house: false
      )
    end

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false
    )
  end

  desc "Build and Upload to TestFlight"
  lane :release do
    build_release
    upload_testflight
  end
end

